<div class="col-10 col-sm-10 col-md-10 col-lg-7 col-xs-7 mt-3">
    <div class="card">
        <div class="card-header bg-info">
            <div class="title">
                Edit
            </div>
        </div>
        <div class="card-body ">
            <form action="/menu/list/edit" method="POST">
                <div class="input-group">
                    <label for="" class="mr-2 mb-2 mt-1 text-primary ">ID :</label>
                    <input class="mb-2 form-control" type="text" name="id" value="<%-data.id%>" readonly>
                </div>
                <div class="input-group">
                    <label for="txtName" class="mt-1 mr-2">Tên</label>
                    <input class="form-control" type="text" name="txtName" id="txtName" value="<%-data.name%>">
                </div>
                <div class="form-group row mt-2">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-6 col-xs-6">
                        <label for="txtOrdering" class="mt-1 mr-2">Số lượng</label>
                        <select class="form-control" id="txtOrdering" name="txtOrdering">
                            <%for(let i=1;i<=10;i++){%>
                            <%if(data.ordering==i){%>
                            <option value="<%-i%>" selected><%-i%></option>
                            <%}%>
                                <option value="<%-i%>" ><%-i%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group row">
                        <label for="txtActive" class="ml-3 mt-1 mr-2">Trạng thái</label>
                        <select value="false" name="txtActive" id="txtActive" class="form-control input-group col-12 col-md-12 col-sm-12 col-lg-6 col-xs-6">
                            <%if(data.active){%>
                            <option value=true>Kích hoạt</option>
                            <option value=false>Ẩn</option>
                            <%}else{%>
                            <option value=true>Kích hoạt</option>
                            <option value=false selected>Ẩn</option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Chỉnh sửa</button>
                    <div class="btn btn-danger back" >Trở lại</div>
                </div>
            </form>
        </div>
    </div>
    