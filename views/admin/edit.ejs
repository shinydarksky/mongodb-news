<div class="col-3 col-sm-3 col-md-3 col-lg-5 col-xs-5 mt-3">
    <div class="card">
        <div class="card-header bg-info">
            <div class="title">
                Edit
            </div>
        </div>
        <div class="card-body ">
            <form action="menu/list/edit" method="POST">
                <div class="input-group">
                    <label for="txtName" class="mt-1 mr-2">Tên</label>
                    <input class="form-control" type="text" name="txtName" id="txtName" value="<%-data.name%>">
                </div>
                <div class="form-group row mt-2">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-6 col-xs-6">
                        <label for="txtOrdering" class="mt-1 mr-2">Số lượng</label>
                        <select class="form-control" id="txtOrdering" name="txtOrdering" >
                            <%for(let i=1;i<=10;i++){%>
                                <%if(data.ordering==i){%>
                                    <option value="<%-i%>"  selected><%-i%></option>
                                <%}%>
                                <option value="<%-i%>" ><%-i%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
    