<div class="col-12 col-sm-12 col-md-12 col-xl-8 col-xs-8 mt-1">
    <div class="card ">
        <div class="card-header bg-success">
            <div class="card-title pt-1 h3">Thêm</div>
        </div>
        <div class="card-body">
            <form action="/new/add" method="POST" enctype="multipart/form-data">
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtCategory" class="mt-1 mr-2">Thể loại</label>
                        <select name="txtCategory" id="txtCategory" class="form-control">
                            <%data.forEach((datums)=>{%>
                            <option value="<%-datums._id%>"><%-datums.name%></option>
                            <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtName " class="mt-1 mr-2">Nhập tiêu đề</label>
                        <input type="text" class="form-control" name="txtTitle" id="txtName" />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtDescription" class="mr-3">Nhập mô tả</label>
                        <textarea class="form-control" name="txtDescription" id="txtDescription" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <input type="file" name="txtImage" id="txtImage" class="form-control" value="123"></input>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtContent" class="mr-3">Nhập nội dung</label>
                        <textarea class="form-control" name="txtContent" id="txtContent" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtActive" class="mt-1 mr-1">Trạng thái</label>
                        <select name="txtActive" id="txtActive" class="form-control">
                            <option value=true>Kích hoạt</option>
                            <option value=false>Ẩn</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row  justify-content-center">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-10 col-xs-10">
                        <label for="txtOrdering" class="mt-1 mr-2">Số lượng</label>
                        <select class="form-control" id="txtOrdering" name="txtOrdering">
                            <%for(let i=1;i<=100;i++){%>
                            <option value="<%-i%>"><%-i%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-dark btn-md">Gửi thêm mới</button>
                    <div class="btn btn-danger ml-1 btn-md back">Trở lại</div>
                </div>

            </form>
        </div>
    </div>
</div>