<div class="col-10 col-sm-10 col-md-10 col-lg-10 col-xs-10 mt-3">
  <div class="card">
    <div class="card-header">
      <div class="title">
        List Category
      </div>
    </div>
    <div class="card-body">
    <table class="table">
      <tr>
        <th >ID</th>
        <th >Tên</th>
        <th >Số lượng</th>
        <th>Trạng thái</th>
        <th>Tùy chọn</th>
      </tr>
      <%data.forEach((datums)=>{%>

        <tr>
          <td ><%-datums._id%></td>
          <td ><%-datums.name%></td>
          <td ><%-datums.ordering%></td>
          <td class="text-center"><%-datums.active?'Kích hoạt':'Ẩn'%></td>
          <td>
            <a href="#" class="m-2 btn btn-success">Sửa</a>
            <a href="#" class="btn btn-danger">Xóa</a>
          </td>
        </tr>
      <%})%>
    </table>
    </div>
  </div>
</div>
