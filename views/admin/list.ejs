<div class="col-6 col-sm-6 col-md-6 col-lg-10 col-xs-10 mt-3">
  <div class="card">
    <div class="card-header bg-info">
      <div class="title">
        List Category
      </div>
    </div>
    <div class="card-body ">
    <table class="table " padding="1px" margin="1px" >
      <tr scope="row" class="bg-warning">
        <th scope="col">ID</th>
        <th scope="col">Tên</th>
        <th scope="col">Số lượng</th>
        <th scope="col">Trạng thái</th>
        <th scope="col">Tùy chọn</th>
      </tr>
      <%data.forEach((datums)=>{%>

        <tr >
          <td scope="row"><%-datums._id%></td>
          <td ><%-datums.name%></td>
          <td ><%-datums.ordering%></td>
          <td class="text-center "><%-datums.active?'Kích hoạt':'Ẩn'%></td>
          <td>
            <a href="./list/edit/<%-datums._id%>" class="btn btn-success mr-1" ref="<%-datums._id%>">Sửa</a>
            <a href="./list/delete/<%-datums._id%>" class="btn btn-danger">Xóa</a>
          </td>
          <td></td>
        </tr>
      <%})%>
    </table>
    </div>
  </div>
</div>
