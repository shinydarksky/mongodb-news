<div class="col-12 col-sm-12 col-md-12 col-xl-6 col-xs-6 mt-1">
    <div class="card ">
        <div class="card-header bg-primary">
            <div class="card-title pt-1 h   3">Thêm</div>
        </div>
        <div class="card-body">
            <form action="/menu/add" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <label for="txtName " class="mt-1 mr-2">Nhập tên</label>
                        <input type="text" class="form-control" name="txtName" id="txtName" />
                    </div>
                </div>
                <div class="form-group row ">
                    <div class="input-group col-12 col-md-12 col-sm-12 col-lg-6 col-xs-6">
                        <label for="txtOrdering" class="mt-1 mr-2">Số lượng</label>
                        <select class="form-control" id="txtOrdering" name="txtOrdering">
                            <%for(let i=1;i<=100;i++){%>
                                <option value="<%-i%>" ><%-i%></option>
                            <%}%>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label for="txtActive" class="mt-1 mr-1">Trạng thái</label>
                        <select name="txtActive" id="txtActive" class="form-control">
                            <option value=true>Kích hoạt</option>
                            <option value=false>Ẩn</option>
                        </select>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-success btn-md">Gửi thêm category</button>
                    <div class="btn btn-danger ml-1 btn-md back">Trở lại</div>
                </div>
            </form>
        </div>
    </div>
</div>
